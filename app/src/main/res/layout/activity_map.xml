<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapActivity">

    <ImageView
        android:id="@+id/header_image"
        android:layout_width="100dp"
        android:layout_height="282dp"
        android:layout_marginTop="92dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Some Text."
        android:textColor="@color/mainText"
        app:layout_constraintTop_toBottomOf="@+id/header_image"
        tools:layout_editor_absoluteX="170dp" />

    <TextView
        android:id="@+id/page_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="More Text."
        android:textColor="@color/textAlt"
        app:layout_constraintTop_toBottomOf="@+id/page_title"
        tools:layout_editor_absoluteX="172dp" />

    <Button
        android:id="@+id/switch_button"
        android:layout_width="128dp"
        android:layout_height="88dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/switch_btn_bg"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Enable Dark Mode"
        android:textColor="@color/mainBackground"
        app:layout_constraintTop_toBottomOf="@+id/page_description"
        tools:layout_editor_absoluteX="141dp" />

    <Button
        android:id="@+id/arm_drone"
        android:layout_width="128dp"
        android:layout_height="88dp"
        android:background="@drawable/switch_btn_bg"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Arm Drone"
        android:textColor="@color/mainBackground"
        app:layout_constraintEnd_toStartOf="@+id/header_image"
        tools:layout_editor_absoluteY="286dp" />

    <Button
        android:id="@+id/start_mission"
        android:layout_width="129dp"
        android:layout_height="88dp"
        android:background="@drawable/switch_btn_bg"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="Start Mission"
        android:textColor="@color/mainBackground"
        app:layout_constraintStart_toEndOf="@+id/header_image"
        tools:layout_editor_absoluteY="258dp" />
</androidx.constraintlayout.widget.ConstraintLayout>